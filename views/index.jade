extends layout

block styles
    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Lato:300,400,700")
    link(rel='stylesheet', href='/stylesheets/index.css')

block content
    div#content-pane
        div#head
            h1 SecretTwitter
            p.sub-head  A product of CYOSP
        div#lcol
            div.card.tweet-card
                p Write an sTweet
                input#tweet-message(placeholder="type your message")
                button(onclick="tweet()") tweet
            div.card.follow-new
                p Follow someone new
                input#new-follow-input(placeholder="type username")
                button(onclick="follow()") follow
            div.card.following
                p Who you follow
                ul#following-list
            div.card.followers
                p Your followers
                ul#followers-list
        div#main
//        This will be generated by index.js

block scripts
    script(src='/scripts/index.js')